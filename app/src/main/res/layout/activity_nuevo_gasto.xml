<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin">

    <TextView
        android:id="@+id/tv_tipoGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de gasto:"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        android:text="Monto:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_montoGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="$"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Descripcion"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_descGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textShortMessage"
        android:lines="1"
        android:maxHeight="200dp"
        android:maxLength="20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/field_margin"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cuenta"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_guardarGasto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Guardar" />
</LinearLayout>